// Baseline forecast expressed as timeSeries
// TODO create specific timeseries, similarly as FlexibilityTimeseries. We could use BaselineForecastTimeseries
?ts rdf:type forecast:timeSeries .

// Time interval for the entire timeseries (all points)
// Example: 2021-08-30T00:00:00Z - 2021-08-31T00:00:00Z
?ts forecast:hasTime ?ti .
?ti time:hasBeginning ?time_interval_start .
?time_interval_start time:inXSDDateTimeStamp ?tis .
?ti time:hasEnd ?time_interval_end .
?time_interval_end time:inXSDDateTimeStamp ?tie .

// Resolution of each point in timeseries
// Example:  1H
?ts time:hasTemporalResolution ?res .
?res time:days ?res_d .
?res time:hours ?res_h .
?res time:minutes ?res_m .
?res time:seconds ?res_s .

// Update of entire timeseries
// Example:  1H - we receive 24 points (timeseries) every 1 H
?ts time:hasUpdateRate ?update .
?update time:days ?res_d .
?update time:hours ?res_h .
?update time:minutes ?res_m .
?update time:seconds ?res_s .

// Array of data points representing interval of active power, e.g for hourly interval in the day - 24 points
?ts forecast:hasSeriesOfDataPoint ?dp .
// Time interval of the data point
// Example: 2021-08-30T00:00:00Z - 2021-08-30T01:00:00Z
?dp forecast:hasTimeStamp ?ts
?ts time:hasBeginning ?time_interval_start .
?time_interval_start time:inXSDDateTimeStamp ?tis .
?ts time:hasEnd ?time_interval_end .
?time_interval_end time:inXSDDateTimeStamp ?tie .
// Value of the active power in the interval in kW
// Example: 1000 kW
?dp forecast:hasQuantity ?q .
?q rdf:type ic-units:ActivePower .
?q om:hasValue ?v .
?v om:hasUnit ic-units:kiloWatt .
?v om:hasNumericalValue ?nv .
// Value of the energy price in the interval in MW/kWh
// Example: 200 EUR/MWh
?dp forecast:hasQuantity ?e_price .
// Do we need this?
?e_price rdf:type ic-units:EuroPerMegawattHour .
?e_price om:hasValue ?v .
?v om:hasUnit ic-units:euroPerMegawattHour .
?v om:hasNumericalValue ?e_p_nv .

?ts forecast:hasSeriesOfDataPoint ?dp .
// Time interval of the data point
// Example: 2021-08-30T01:00:00Z - 2021-08-30T02:00:00Z
?dp forecast:hasTimeStamp ?ts
?ts time:hasBeginning ?time_interval_start .
?time_interval_start time:inXSDDateTimeStamp ?tis .
?ts time:hasEnd ?time_interval_end .
?time_interval_end time:inXSDDateTimeStamp ?tie .
// Value of the active power in the interval in kW
// Example: 1000 kW
?dp forecast:hasQuantity ?q .
?q rdf:type ic-units:ActivePower .
?q om:hasValue ?v .
?v om:hasUnit ic-units:kiloWatt .
?v om:hasNumericalValue ?nv .
// Value of the energy price in the interval in MW/kWh
// Example: 200 EUR/MWh
?dp forecast:hasQuantity ?e_price .
// Do we need this?
?e_price rdf:type ic-units:EuroPerMegawattHour .
?e_price om:hasValue ?v .
?v om:hasUnit ic-units:euroPerMegawattHour .
?v om:hasNumericalValue ?nv .

